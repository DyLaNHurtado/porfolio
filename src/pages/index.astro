---
import Layout from '../layouts/Layout.astro';
import { defineComponent } from 'vue';
import Hero from '../components/Hero.vue';
import ProjectsPreview from '../components/ProjectsPreview.vue';

export default defineComponent({
  name: 'HomePage',
  components: { Hero, ProjectsPreview },
});
---

<Layout>
  <Hero />
  <section class="intro text-center py-8">
    <h2 class="text-3xl font-bold">Welcome to My Portfolio</h2>
    <p class="mt-4 text-lg">Explore my projects, skills, and more about my journey as a Frontend Developer.</p>
  </section>
  <ProjectsPreview />
</Layout>
